<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <block class="Magento\Catalog\Block\Category\View" name="tweakwise-js-lister"
                   template="Tweakwise_TweakwiseJs::js/category/listing.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Tweakwise\TweakwiseJs\ViewModel\Merchandising
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <!-- Make sure the columns container is not empty, else Magento doesn't render it -->
        <referenceContainer name="columns">
            <block class="Magento\Framework\View\Element\Text">
                <arguments>
                    <argument name="text" xsi:type="string"><![CDATA[&nbsp;]]></argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="main" remove="true"/>
        <referenceContainer name="div.sidebar.main" remove="true"/>
        <referenceContainer name="div.sidebar.additional" remove="true"/>
    </body>
</page>
